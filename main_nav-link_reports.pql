. write(cgi) 4T STR$1

c Find Text
. STR$1 = '<li><a onClick="serverRequest(''Requesting'');" href="<mycgi>?member=WPF.INC_REPORTS.FINDTEXT'
. if('<CASEIS>' ne '') STR$1 = STR$1 + '&amp;caseis=<CASEISNQ>'
. STR$1 = STR$1  + '">Find Text</a></li>'
